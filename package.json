{
  "name": "slack-time-punch-workspace",
  "version": "1.0.0",
  "description": "Slack Time Punch App - TypeScript Monorepo with Server/Client separation, Docker support, and Tauri-ready architecture",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "npm run dev --workspace=packages/server",
    "dev:client": "npm run dev --workspace=packages/client",
    "build": "npm run build --workspace=packages/server && npm run build --workspace=packages/client",
    "build:server": "npm run build --workspace=packages/server",
    "build:client": "npm run build --workspace=packages/client",
    "start:server": "npm start --workspace=packages/server",
    "start:client": "npm start --workspace=packages/client",
    "clean": "npm run clean --workspace=packages/server && npm run clean --workspace=packages/client",
    "install:all": "npm install && npm install --workspace=packages/server && npm install --workspace=packages/client",
    "check:server": "cd packages/server && npm run build",
    "check:client": "cd packages/client && npm run build",
    "debug": "concurrently --kill-others \"npm run dev:server\" \"sleep 3 && npm run dev:client\"",
    "docker:server:build": "docker-compose -f docker-compose.server.yml build",
    "docker:server:up": "docker-compose -f docker-compose.server.yml up -d",
    "docker:server:down": "docker-compose -f docker-compose.server.yml down",
    "docker:server:logs": "docker-compose -f docker-compose.server.yml logs -f",
    "docker:server:restart": "npm run docker:server:down && npm run docker:server:build && npm run docker:server:up",
    "lint": "eslint \"packages/*/src/**/*.{ts,tsx,js,jsx}\"",
    "lint:fix": "eslint \"packages/*/src/**/*.{ts,tsx,js,jsx}\" --fix",
    "format": "prettier --write \"packages/**/src/**/*.{ts,tsx,js,jsx,json,css}\" \"packages/**/package.json\"",
    "format:check": "prettier --check \"packages/**/src/**/*.{ts,tsx,js,jsx,json,css}\" \"packages/**/package.json\"",
    "postinstall": "simple-git-hooks"
  },
  "keywords": [
    "slack",
    "oauth",
    "typescript",
    "tauri",
    "desktop",
    "react",
    "vite",
    "express",
    "docker",
    "monorepo"
  ],
  "author": "",
  "license": "ISC",
  "simple-git-hooks": {
    "pre-commit": "npm run lint && npm run format:check"
  },
  "devDependencies": {
    "@eslint/js": "^9.15.0",
    "@typescript-eslint/eslint-plugin": "^8.15.0",
    "@typescript-eslint/parser": "^8.15.0",
    "concurrently": "^8.2.0",
    "eslint": "^9.15.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jsx-a11y": "^6.10.0",
    "eslint-plugin-react": "^7.37.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "prettier": "^3.3.0",
    "simple-git-hooks": "^2.13.0",
    "typescript": "^5.6.0",
    "typescript-eslint": "^8.15.0"
  }
}
