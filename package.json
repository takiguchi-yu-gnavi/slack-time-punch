{
  "name": "slack-oauth-app",
  "version": "1.0.0",
  "description": "Slack OAuth authentication with TypeScript",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "client": "vite",
    "build:client": "vite build",
    "preview:client": "vite preview",
    "dev:all": "concurrently \"npm run dev\" \"npm run client\"",
    "build:all": "npm run build && npm run build:client",
    "clean": "rm -rf dist build"
  },
  "keywords": ["slack", "oauth", "typescript"],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "express": "^4.18.2",
    "dotenv": "^16.3.1",
    "axios": "^1.6.0",
    "cors": "^2.8.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "@types/cors": "^2.8.17",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "typescript": "^5.3.0",
    "ts-node-dev": "^2.0.0",
    "vite": "^5.0.0",
    "@vitejs/plugin-react": "^4.2.0",
    "concurrently": "^8.2.0"
  }
}
