{
  "name": "@slack-time-punch/cdk",
  "version": "1.0.0",
  "description": "AWS CDK infrastructure for Slack Time Punch App",
  "main": "dist/index.js",
  "scripts": {
    "bootstrap": "cdk bootstrap",
    "build:web": "cd ../web && npm run build",
    "build": "tsc",
    "cdk": "cdk",
    "clean": "rm -rf dist",
    "deploy": "cdk deploy",
    "destroy": "cdk destroy",
    "diff": "cdk diff",
    "format:check": "prettier --check \"src/**/*.{ts,json}\"",
    "format": "prettier --write \"src/**/*.{ts,json}\"",
    "lint:fix": "eslint src --fix",
    "lint": "eslint src --max-warnings 0",
    "predeploy": "npm run build:web && npm run build",
    "synth": "cdk synth",
    "type-check": "tsc --noEmit",
    "watch": "tsc -w"
  },
  "keywords": [
    "aws",
    "cdk",
    "infrastructure",
    "cloudfront",
    "waf",
    "api-gateway",
    "lambda"
  ],
  "engines": {
    "node": ">=22.0.0"
  },
  "dependencies": {
    "aws-cdk-lib": "^2.233.0",
    "constructs": "^10.4.4"
  },
  "devDependencies": {
    "@types/node": "^24.10.4",
    "aws-cdk": "^2.1100.1",
    "typescript": "^5.9.3"
  }
}
