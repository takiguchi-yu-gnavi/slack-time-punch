{
  "name": "@slack-time-punch/web",
  "version": "1.0.0",
  "description": "React.js Frontend for Slack Time Punch App",
  "type": "module",
  "scripts": {
    "build": "tsc && vite build",
    "clean": "rm -rf dist",
    "dev": "vite",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,css,json}\"",
    "format": "prettier --write \"src/**/*.{ts,tsx,css,json}\"",
    "lint:fix": "eslint src --fix",
    "lint": "eslint src --max-warnings 0",
    "preview": "vite preview",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "@slack-time-punch/shared": "file:../shared"
  },
  "devDependencies": {
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.2",
    "typescript": "^5.9.3",
    "vite": "^7.3.0"
  }
}
